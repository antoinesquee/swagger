          },
          "409": {
            "description": "такой товар уже есть"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          },
          "description": "Новый товар для добавления в каталог"
